<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FamilyHelper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Цвет статус бара -->
        <item name="android:statusBarColor">@android:color/white</item>
        <!-- Делаем иконки статус бара темными (для светлого фона) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Рисуем контент под системными панелями -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.FamilyHelper" parent="Base.Theme.FamilyHelper" />

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>